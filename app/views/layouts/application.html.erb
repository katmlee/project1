<!DOCTYPE html>
<html>
<head>
  <title>Travelapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
  <%= link_to 'Home', root_path %>
  <% if @current_user.present? %>
    <%# if @current_user.admin? %>
      <%#= link_to "Users", users_path %>
    <%# end %>
    |
    <%= link_to "#{@current_user.first_name}'s' Destinations", user_destinations_path(@current_user)%>
    <%= link_to "New Destination", new_user_destination_path(@current_user)%>
    |
    <%= link_to "Edit Profile", edit_user_path %>
    <%= link_to "Logout #{ @current_user.email }", login_path, :method => :delete %>

  <% else %>
    <%= link_to 'Sign up', new_user_path %>
    <%= link_to 'Login', login_path %>
  <% end %>
  </nav>
<div class="container">
<%= yield %>
</div>
</body>
</html>

<h1>Login</h1>
<%= form_tag '/login' do %>
  <div class="form-group">
  <%= label_tag :email, nil, :autofocus => true %>
  <%= text_field_tag :email, nil, :class => 'form-control' %>
  <!-- Because it doesn't have form for because second argument is usually the value to need to pass through nil -->
  </div>
  <div class="form-group">
  <%= label_tag :password %>
  <%= password_field_tag :password, nil, :class => 'form-control'%>
  <%= submit_tag 'Login' %>
  </div>
<% end %>

<h1>Login</h1>
<div class="row login_row">
    <div class="col-md-6 login_form">
        <%= form_tag '/login' do %>
        <div class="form-group">
            <%= label_tag :email, nil, :autofocus => true %>
            <%= text_field_tag :email, nil, :class => 'form-control' %>
            <!-- Because it doesn't have form for because second argument is usually the value to need to pass through nil -->
        </div>
        <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, nil, :class => 'form-control'%>
        </div>
        <%= submit_tag 'Login' %>
        <% end %>
    </div>
    <div class="col-md-6 fbarea">
        <div class="facebook_div">
            <div class="fb-login-button" data-max-rows="1" data-size="large" data-show-faces="false" data-auto-logout-link="false"></div>
        </div>
    </div>

</div>

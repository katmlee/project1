<%= form_for([@current_user, @destination], :html => {:multipart => true}) do |f| %>
  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :country %>
    <%= f.text_field :country, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :start_date, 'Start date of trip' %>
    <%= f.date_field :start_date, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :end_date, 'End date of trip'%>
    <%= f.date_field :end_date, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :trip_synopsis, 'Trip Synopsis' %>
    <%= f.text_area :trip_synopsis, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :must_eat, 'Must eat?' %>
    <%= f.text_field :must_eat, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :must_see, 'Must see?' %>
    <%= f.text_field :must_see, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :must_do, 'Must do?' %>
    <%= f.text_field :must_do, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :who, 'Who did you go with?' %>
    <%= f.text_field :who, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :purpose, 'Why did you go?' %>
    <%= f.text_field :purpose, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :favorite_part, 'What was your favorite part?' %>
    <%= f.text_area :favorite_part, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :destination_photos %>
    <%= file_field_tag("destination_photos[]", :multiple => true ) %>
  </div>

  <div class="form-group">
    <%= f.label :map_link, 'Place an embed link for Tripcipe, Google MyMaps or Four Square' %>
    <%= f.url_field :map_link, :class => 'form-control' %>
  </div>

  <%= f.submit %>

<% end %>
